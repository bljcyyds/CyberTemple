<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".EditActivity">

    <EditText
        android:id="@+id/newName"
        android:background="@drawable/outline"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:ems="10"
        android:hint="Name"
        android:textColorHint="@color/teal_200"
        android:inputType="textPersonName"
        android:textColor="#FCEC0C"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/newDescription"
        android:background="@drawable/outline"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_below="@+id/newName"
        android:ems="10"
        android:textColor="#FCEC0C"
        android:hint="Description"
        android:textColorHint="@color/teal_200"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true" />



    <Button
        android:id="@+id/update_button"
        android:layout_width="70dp"
        android:layout_height="79dp"
        android:layout_below="@+id/newDescription"
        android:layout_alignLeft="@id/newDescription"
        android:textColor="#1C1C1C"
        android:text="Update"
        android:textAllCaps="false"
        android:backgroundTint="#FCEC0C"
        />
    <Button
        android:id="@+id/back_detail_button"
        android:layout_width="70dp"
        android:layout_height="79dp"
        android:layout_below="@+id/newDescription"
        android:layout_alignRight="@id/newDescription"
        android:textColor="#1C1C1C"
        android:text="Cancel"
        android:textAllCaps="false"
        android:backgroundTint="#FCEC0C"
        />
</RelativeLayout>